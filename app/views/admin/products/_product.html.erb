<tr class="bg-gray-50 border-b">
  <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800 underline">
    <%= product.images.present? ? image_tag(product.images.first.variant(:thumb)) : image_tag("https://via.placeholder.com/50") %>
  </td>

  <td>
    <%= product.name %>
  </td>

  <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800 underline">
    <%= product.description %>
  </td>

  <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800 underline">
    $ <%= product.price %>
  </td>

  <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800">
    <%= product.category.name%>
  </td>

  <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800">
  <%= product.active %>
  </td>

  </tr>
